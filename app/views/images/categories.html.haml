.body-content
  .page-overview-wrapper
    %h1 Categories

    .clear

    -# %ul.section-nav
      %li.selected
        =link_to "Categories", categories_path
      %li
        =link_to "All Images", images_path

    %a.main-cta.btn-floating.btn-large.waves-effect.waves-light
      .fa.fa-plus.fa-2x
    %a.secondary-cta.btn-floating.btn-large.waves-effect.waves-light
      .fa.fa-balance-scale.fa-2x


  .container.container-fluid
    .row
      %a.dropdown-button.btn.main-sort{"href" => "#", "data-activates" => "dropdown1"} Sorted By Likes

      %ul#dropdown1.dropdown-content
        %li
          %a{href: "#!"} one
        %li
          %a{href: "#!"} one

    -@categories.each do |category|
      .row
        .col.s12
          .card
            .card-content
              .card-title
                =link_to category[:name], categories_sample_path
              .row.margin-none
                .col.s2
                  .category-metric-wrapper
                    %p Total Posts
                    %p=rand(20..40)
                    .clear
                  .category-metric-wrapper
                    %p Total Likes
                    %p=number_with_delimiter(rand(4000..10000), delimiter: ",")
                    .clear
                  .category-metric-wrapper
                    %p Total Comments
                    %p=number_with_delimiter(rand(1000..2000), delimiter: ",")
                    .clear
                  .category-metric-wrapper
                    %p Total Regrams
                    %p=rand(100..300)


                .col.s10
                  .row.margin-none
                    -category[:images].each do |image|
                      .col.s2
                        .image-wrapper
                          %img{src: image[:url]}

