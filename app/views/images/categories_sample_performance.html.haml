        ['Comments', 0, 0, 10, 0, 0, 0, 0, 0, 0, 0, 0, 42, 0, 24, 20, 11, 31, 0, 49, 10, 0, 0, 0, 16, 18],
        ['Regrams', 0, 0, 9, 0, 0, 0, 0, 0, 0, 0, 0, 21, 0, 11, 12, 7, 28, 0, 33, 5, 0, 0, 0, 10, 13]
      ],
      type: 'bar',
    },
    axis: {
      y: {
        label: {
          text: 'Likes',
          position: 'outer-middle'
        },
      }
    }
  });

