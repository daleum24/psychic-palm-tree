.body-content
  .page-overview-wrapper
    %h1 Bags
    %select.browser-default.date-selector
      %option{disabled: true, selected: true} Jan 1, 2015 - Mar 31, 2015
    .clear

    %ul.section-nav
      %li
        =link_to "All Images", categories_sample_path
      %li.selected
        =link_to "Performance", categories_sample_performance_path
      %li
        =link_to "Creative Insights", categories_sample_creative_path
      %li
        =link_to "Audience", categories_sample_audience_path


    =link_to "< Back To Categories", categories_path, class: "breadcrumbs"

  .container.container-fluid
    .row
      .col.s4
        .card
          .card-content
            %p.performance-metric-label Likes
            .row.margin-none
              .col.s6
                %p.performance-agg-metric
                  %span 12,780
                  %span Total
              .col.s6
                %p.performance-agg-metric
                  %span 1,278
                  %span Avg / Post
      .col.s4
        .card
          .card-content
            %p.performance-metric-label Comments
            .row.margin-none
              .col.s6
                %p.performance-agg-metric
                  %span 231
                  %span Total
              .col.s6
                %p.performance-agg-metric
                  %span 23
                  %span Avg / Post
      .col.s4
        .card
          .card-content
            %p.performance-metric-label Regrams
            .row.margin-none
              .col.s6
                %p.performance-agg-metric
                  %span 149
                  %span Total
              .col.s6
                %p.performance-agg-metric
                  %span 15
                  %span Avg / Post

    .row
      .col.s12
        .card
          .card-content
            .card-title Trends
            #performance-chart

    .row
      .col.s6
        .card
          .card-content
            .card-title Top Performers
            .row.margin-none
              -@top_performers.each do |image|
                .col.s4
                  .image-wrapper
                    %img{src: image[:url]}
      .col.s6
        .card
          .card-content
            .card-title Weak Performers
            .row.margin-none
              -@weak_performers.each do |image|
                .col.s4
                  .image-wrapper
                    %img{src: image[:url]}

